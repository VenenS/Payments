{
  "AllowedHosts": "*",
  "Serilog": 
  {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Ovveride": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  },
  "AppSettings": {
    "NumberOfAttempts": "1",
    "PeriodOfTime": "2"
  },
  "Mail": {
    //Отправитель
    "AddressFrom": "support.pay@itwebnet.ru",
    //Смтп клиент
    "SmtpClient": "smtp.yandex.ru",
    //смпт порт
    "SmtpPort": "25",
    //кому отправить
    "AddressTo": "support.pay@itwebnet.ru",
    //пас от почты
